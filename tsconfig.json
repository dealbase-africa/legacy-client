{
  "extends": "@dealbase/tsconfig/lib.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib": ["./src/lib/*"],
      "@/utils": ["./src/utils/*"],
      "@/hooks": ["./src/hooks/*"],
      "react": ["./node_modules/@types/react"]
    },
    "target": "ESNext",
    "downlevelIteration": true,
    "jsx": "preserve",
    "outDir": "dist/esm"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
